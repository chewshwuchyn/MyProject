<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox1"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:checked="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"/>

    <TextView
        android:text="Task End Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTaskEndDate"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tvTaskStartDate"
        android:layout_alignStart="@+id/tvTaskStartDate" />

    <TextView
        android:id="@+id/tvTName"
        android:text="TaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="?attr/dialogPreferredPadding"
        android:textColor="@color/ListTitle"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="24sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkBox1"
        android:layout_marginTop="6dp"
        android:layout_above="@+id/tvTaskStartDate"/>

    <TextView
        android:text="Task Start Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTaskStartDate"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_above="@+id/tvTaskEndDate"
        android:layout_alignLeft="@+id/tvTName"
        android:layout_alignStart="@+id/tvTName"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />


</RelativeLayout>

