<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp">


    <TextView
        android:id="@+id/tvPName"
        android:text="ProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="?attr/dialogPreferredPadding"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/ListTitle"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:text="Total Number of Task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvTotalTask"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:text="Number of Uncomplete Task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTotalTask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvUncomplete"
        android:textAppearance="@android:style/TextAppearance.Small" />


</RelativeLayout>