<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chewshwu.myproject.CreateProject">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Project"
        android:id="@+id/tvCreate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#1b0754"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Name :"
        android:id="@+id/tvName"
        android:layout_below="@+id/tvCreate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:height="25dp"
        android:textColor="#093557" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18dp"
        android:height="40dp"
        android:hint="Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type :"
        android:id="@+id/tvType"
        android:textSize="20dp"
        android:height="25dp"
        android:textColor="#093557"
        android:layout_below="@+id/etName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etType"
        android:textSize="18dp"
        android:height="40dp"
        android:layout_below="@+id/tvType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etName"
        android:layout_alignEnd="@+id/etName"
        android:hint="Type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date :"
        android:id="@+id/tvStartDate"
        android:textSize="20dp"
        android:height="25dp"
        android:textColor="#093557"
        android:layout_below="@+id/etType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etStartDate"
        android:layout_below="@+id/tvStartDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etType"
        android:layout_alignEnd="@+id/etType"
        android:height="40dp"
        android:hint="Start Date"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Date :"
        android:id="@+id/tvFinishDate"
        android:textSize="20dp"
        android:height="25dp"
        android:textColor="#093557"
        android:layout_below="@+id/etStartDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etFinishDate"
        android:height="40dp"
        android:hint="Finish Date"
        android:textSize="18dp"
        android:layout_below="@+id/tvFinishDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etStartDate"
        android:layout_alignEnd="@+id/etStartDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Number of Milestone :"
        android:id="@+id/tvNoOfMilestone"
        android:textSize="20dp"
        android:height="25dp"
        android:textColor="#093557"
        android:layout_below="@+id/etFinishDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etNoOfMilestone"
        android:layout_below="@+id/tvNoOfMilestone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etFinishDate"
        android:layout_alignEnd="@+id/etFinishDate"
        android:height="40dp"
        android:hint="No of Milestone"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Milestone :"
        android:id="@+id/tvCurMilestone"
        android:textSize="20dp"
        android:height="25dp"
        android:textColor="#093557"
        android:layout_below="@+id/etNoOfMilestone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etCurMilestone"
        android:height="40dp"
        android:hint="Current Milestone"
        android:textSize="18dp"
        android:layout_below="@+id/tvCurMilestone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/bCreate"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etCurMilestone"
        android:layout_alignEnd="@+id/etCurMilestone"
        android:onClick="CreateProject"/>

</RelativeLayout>
