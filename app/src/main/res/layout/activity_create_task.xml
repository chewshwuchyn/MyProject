<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCreateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="Create New Task"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/ListTitle"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name :"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/TitleTextView"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:text="Start Date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTaskName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/TitleTextView"
            android:textSize="20sp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="40dp"
            android:id="@+id/tvTStartDate"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <EditText
            android:id="@+id/etTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Task Name"
            android:inputType="text|textPersonName"
            android:layout_below="@+id/tvTaskName"
            android:layout_alignLeft="@+id/tvTaskName"
            android:layout_alignStart="@+id/tvTaskName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@+id/tvTStartDate"
            android:layout_alignLeft="@+id/tvTStartDate"
            android:layout_alignStart="@+id/tvTStartDate"
            android:id="@+id/etTStartDate"
            android:hint="Start Date" />

        <TextView
            android:text="Finish Date ;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTStartDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/TitleTextView"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="20sp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="40dp"
            android:id="@+id/tvTEndDate" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@+id/tvTEndDate"
            android:layout_alignLeft="@+id/tvTEndDate"
            android:layout_alignStart="@+id/tvTEndDate"
            android:id="@+id/etTEndDate"
            android:hint="Finish Date" />

        <TextView
            android:text="Project ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTEndDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="20sp"
            android:textColor="@color/TitleTextView"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="40dp"
            android:id="@+id/tvProjID" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:ems="10"
            android:layout_below="@+id/tvProjID"
            android:layout_alignLeft="@+id/tvProjID"
            android:layout_alignStart="@+id/tvProjID"
            android:id="@+id/etProjID"
            android:hint="Project ID" />

        <Button
            android:text="Create Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="11dp"
            android:id="@+id/bTCreate"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>